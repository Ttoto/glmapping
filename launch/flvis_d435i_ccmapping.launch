<launch>

<!--Input######################################################################################################-->
    <!--<include file="$(find ccmapping)/launch/d435i.launch"/>-->

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find ccmapping)/launch/config/flvis_ccmapping.rviz" />


<!--ccmapping######################################################################################################-->
    <arg name="ccmapping_node_start_delay"  default="5.0" />
    <param name="/ccmapping_configfile" type="string" value="$(find ccmapping)/launch/config/d435i_ccmapping_config.yaml"/>

    <node pkg="nodelet" type="nodelet"
        name="ccmapping_nodelet_manager" args="manager" output="screen">
        <param name="num_worker_threads" value="2" />
    </node>

    <node pkg="nodelet" type="nodelet" args="load ccmapping/LocalMapNodeletClass ccmapping_nodelet_manager"
        name="ccmapping_LocalMapNodeletClass_loader" output="screen"
        launch-prefix="bash -c 'sleep 7; $0 $@' ">
        <remap from="/ccmapping/pc"          to="/camera/depth/color/points"/>
        <remap from="/ccmapping/pose"        to="/imu_pose"/>
    </node>

    <node pkg="nodelet" type="nodelet" args="load ccmapping/GlobalMapNodeletClass ccmapping_nodelet_manager"
        name="ccmapping_GlobalMapNodeletClass_loader" output="screen"
        launch-prefix="bash -c 'sleep 6; $0 $@' ">
    </node>

<!--FLVIS######################################################################################################-->
    <arg name="flvis_node_start_delay"  default="1.0" />
    <param name="/yamlconfigfile" type="string" value="$(find ccmapping)/launch/config/d435i_sn943222072828.yaml"/>
    <param name="/voc"            type="string" value="$(find flvis)/voc/voc_orb.dbow3"/>

    <node pkg="nodelet" type="nodelet"
        name="flvis_nodelet_manager" args="manager" output="screen"
        launch-prefix="bash -c 'sleep 0; $0 $@' ">
        <param name="num_worker_threads" value="3" />
    </node>
    <node pkg="nodelet" type="nodelet" args="load flvis/TrackingNodeletClass flvis_nodelet_manager"
        name="flvis_TrackingNodeletClass_loader" output="log"
        launch-prefix="bash -c 'sleep $(arg flvis_node_start_delay); $0 $@' ">
        <remap from="/vo/depth_image"  to="/camera/aligned_depth_to_infra1/image_raw"/>
        <remap from="/vo/image"        to="/camera/infra1/image_rect_raw"/>
        <remap from="/imu"             to="/camera/imu"/>
    </node>
    <node pkg="nodelet" type="nodelet" args="load flvis/LocalMapNodeletClass flvis_nodelet_manager"
        name="flvis_LocalMapNodeletClass_loader" output="log"
        launch-prefix="bash -c 'sleep $(arg flvis_node_start_delay); $0 $@' ">
    </node>

</launch>






