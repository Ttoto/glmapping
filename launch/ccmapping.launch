<launch>
    <param name ="/use_sim_time" value="true"/>
<!--Input######################################################################################################-->
    <node pkg="rosbag" type="play" name="rosbag" args="$(find ccmapping)/bag/xtion2.bag --clock"
        launch-prefix="bash -c 'sleep 2; $0 $@' ">
    </node>

<!--rviz#######################################################################################################-->
<!--    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find ccmapping)/launch/config/ccmapping.rviz" />-->

<!--ccmapping##################################################################################################-->
    <arg name="node_start_delay"  default="1.0" />
    <param name="/ccmapping_configfile" type="string" value="$(find ccmapping)/launch/config/config.yaml"/>

    <!-- Manager -->
    <node pkg="nodelet" type="nodelet"
          name="ccmapping_nodelet_manager" args="manager" output="screen">
          <param name="num_worker_threads" value="2" />
    </node>

    <!-- TrackingNode -->
    <node pkg="nodelet" type="nodelet" args="load ccmapping/LocalMapNodeletClass ccmapping_nodelet_manager"
        name="LocalMapNodeletClass_loader" output="screen"
        launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
        <remap from="/ccmapping/pc"          to="/camera/depth/points"/>
        <remap from="/ccmapping/pose"        to="/vrpn_client_node/xtion2/pose"/>
    </node>

    <node pkg="nodelet" type="nodelet" args="load ccmapping/GlobalMapNodeletClass ccmapping_nodelet_manager"
        name="GlobalMapNodeletClass_loader" output="screen"
        launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
    </node>

</launch>







